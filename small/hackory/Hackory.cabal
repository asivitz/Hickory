name:           Hackory
version:        0.0.0
license:        MIT
license-file:   LICENSE
build-type:     Simple
extra-source-files:
    Readme.md

flag production
  description: Enable production mode
  manual: True
  default: False

library
  exposed-modules:
      Hickory.Types
      Hickory.Vulkan.Vulkan
      Hickory.Vulkan.Framing
      Hickory.Vulkan.Frame
      Hickory.Vulkan.Instance
      Hickory.Vulkan.Utils
      Hickory.Vulkan.RenderPass
      Hickory.Vulkan.RenderTarget
      Hickory.Vulkan.Types
      Hickory.ImGUI.Helpers
      Hickory.ImGUI.ImGUI
      Hickory.Editor
      Hickory.Editor.Types
  other-modules:
      Paths_Hackory
  default-extensions:
      NamedFieldPuns
      Rank2Types
      BangPatterns
      OverloadedStrings
      ScopedTypeVariables
      LambdaCase
      TupleSections
      ViewPatterns
      BlockArguments
      RecordWildCards
      GHC2021
  ghc-options: -Wall -Werror=incomplete-patterns -Wunused-packages -Werror=unused-packages
  build-depends:
      VulkanMemoryAllocator
    , acquire
    , base
    , bytestring
    , dear-imgui
    , derive-storable
    , generic-lens
    , hashable
    , lens
    , linear
    , text
    , unordered-containers
    , uuid
    , vector
    , vulkan
    , vulkan-utils
  if os(osx)
    cc-options: -F/System/Library/Frameworks
  if flag(production)
    cpp-options: -DPRODUCTION
  default-language: GHC2021
